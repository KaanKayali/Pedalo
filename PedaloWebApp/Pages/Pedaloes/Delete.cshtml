@page
@model PedaloWebApp.Pages.Pedaloes.DeleteModel
@using PedaloWebApp.Core.Domain.Entities
@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

<h4>Pedaloes</h4>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Pedalo.Name" class="control-label"></label>
                <input asp-for="Pedalo.Name" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Pedalo.Color" class="control-label"></label>
                <input asp-for="Pedalo.Color" class="form-control" disabled>
            </div>
            <div class="form-group">
                <label asp-for="Pedalo.Capacity" class="control-label"></label>
                <input asp-for="Pedalo.Capacity" class="form-control" type="number" min="1" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Pedalo.HourlyRate" class="control-label"></label>
                <input asp-for="Pedalo.HourlyRate" class="form-control" disabled />
            </div>
            <div class="form-group">
                <input asp-for="Pedalo.PedaloId" type="hidden" />
                @if (Model.Pedalo.NumberOfBookings == 0)
                {
                    <input type="submit" value="Delete" class="btn btn-secondary" enabled />
                }
                else
                {
                    <p>Can not be deleted</p>
                    <input type="submit" value="Delete" class="btn btn-secondary" disabled />
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

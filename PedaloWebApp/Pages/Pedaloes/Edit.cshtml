@page
@model PedaloWebApp.Pages.Pedaloes.EditModel
@using PedaloWebApp.Core.Domain.Entities
@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<h4>Pedaloes</h4>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Pedalo.Name" class="control-label"></label>
                <input asp-for="Pedalo.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Pedalo.Color" class="control-label"></label>
                <select asp-for="Pedalo.Color" class="form-control">
                    @foreach (string color in Enum.GetNames(typeof(PedaloColor)))
                    {
                        <option value="@color">@color</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Pedalo.Capacity" class="control-label"></label>
                <input asp-for="Pedalo.Capacity" class="form-control" type="number" min="1" />
            </div>
            <div class="form-group">
                <label asp-for="Pedalo.HourlyRate" class="control-label"></label>
                <input asp-for="Pedalo.HourlyRate" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="Pedalo.PedaloId" type="hidden" />
                <input type="submit" value="Edit" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

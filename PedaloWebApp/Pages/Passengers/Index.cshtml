@page
@model PedaloWebApp.Pages.Passengers.IndexModel
@{
    ViewData["Title"] = "Passengers";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-responsive-lg table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Passenger[0].Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Passenger[0].Lastname)
            </th>
            <th>
                <a asp-page="./Create">
                    <input type="button" value="Create" class="btn btn-secondary"/>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Passenger)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.PassengerId">
                        <input type="button" value="Edit" class="btn" />
                    </a>
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.PassengerId">
                        <input type="button" value="Delete" class="btn" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


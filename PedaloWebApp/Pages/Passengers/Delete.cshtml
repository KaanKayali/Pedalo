@page
@model PedaloWebApp.Pages.Passengers.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

<h4>Passengers</h4>



<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Passenger.Firstname" class="control-label"></label>
                <input asp-for="Passenger.Firstname" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Passenger.Lastname" class="control-label"></label>
                <input asp-for="Passenger.Lastname" class="form-control" disabled />
            </div>
            <div class="form-group">
                <input asp-for="Passenger.PassengerId" type="hidden" />
                @if (Model.Passenger.NumberofBookings == 0)
                {
                    <input type="submit" value="Delete" class="btn btn-secondary" enabled />
                }
                else
                {
                    <p>Can not be deleted</p>
                    <input type="submit" value="Delete" class="btn btn-secondary" disabled />
                }
            </div>
        </form>
    </div>
</div>
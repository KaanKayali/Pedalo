@page
@model PedaloWebApp.Pages.Customers.IndexModel
@{
    ViewData["Title"] = "Customers";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-responsive-lg table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customers[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers[0].LastName)
            </th>
            <th>
                <a asp-page="./Create">
                    <input type="button" value="Create" class="btn btn-secondary" />
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Customers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.CustomerId">
                        <input type="button" value="Edit" class="btn" />
                    </a>
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.CustomerId">
                        <input type="button" value="Delete" class="btn" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
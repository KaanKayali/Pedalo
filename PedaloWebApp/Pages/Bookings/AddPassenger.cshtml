@page
@model PedaloWebApp.Pages.Bookings.CreatePassengerModel
@using PedaloWebApp.Pages.Passengers
@{
    ViewData["Title"] = "Passenger";
}

<h1>@ViewData["Title"]</h1>

<h4>Passenger</h4>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <p>Customer: @Model.CustomerName</p>
                @for (int i = 0; i < Model.Capacity - 1; i++)
                {
                    <select asp-for="PassengerIds[i]" class="form-control">
                        <option value="@Guid.Empty">-</option>
                        @foreach (var item in Model.Passenger.OrderBy(x => x.Firstname).ThenBy(p => p.Lastname))
                        {
                            <option value="@item.PassengerId">
                                @Html.DisplayFor(modelItem => item.Firstname) @Html.DisplayFor(modelItem => item.Lastname)
                            </option>
                        }
                    </select>
                }


            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>   
    <a asp-page="Create">Back to the booking</a><br>
    <a asp-page="Index">Back to List</a>
</div>

